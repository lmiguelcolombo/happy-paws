{
  "expo": {
    "name": "happy-paws",
    "slug": "happy-paws",
    "scheme": "happy-paws",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/logo-white.png",
      "resizeMode": "contain",
      "backgroundColor": "#efefef"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "/assets/fonts/Fira_Sans/FiraSans-Bold.ttf",
            "/assets/fonts/Fira_Sans/FiraSans-Semibold.ttf",
            "/assets/fonts/Fira_Sans/FiraSans-Medium.ttf",
            "/assets/fonts/Fira_Sans/FiraSans-Regular.ttf",
            "/assets/fonts/Montserrat/static/Montserrat-Bold.ttf",
            "/assets/fonts/Montserrat/static/Montserrat-SemiBold.ttf",
            "/assets/fonts/Montserrat/static/Montserrat-Medium.ttf",
            "/assets/fonts/Montserrat/static/Montserrat-Regular.ttf"
          ]
        }
      ],
      "expo-router"
    ]
  }
}
